<Window x:Class="Zakladki.Windows.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zakladki.Windows"
        mc:Ignorable="d"
        Title="AddBook" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Dodaj książkę"/>
            <Label Content="Nazwa książki:"/>
            <TextBox x:Name="TB_Name"/>
            <Label Content="Opis książki:"/>
            <TextBox x:Name="TB_Description"/>
            <Label Content="Autor:"/>
            <TextBox x:Name="TB_Author"/>
            <Label Content="Data wydania:"/>
            <DatePicker x:Name="DP_PublicatedTime"/>
        </StackPanel>
        <Button Content="Dodaj" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Btn_AddBook_Click"/>
    </Grid>
</Window>
